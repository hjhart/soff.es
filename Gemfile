source 'https://rubygems.org'

# Latest Ruby
ruby '2.4.1'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra', require: false
gem 'sinatra-contrib', require: false

# Faster ERB
gem 'erubis'

# Asset pipeline
gem 'sprockets'

# Utilities
gem 'rake'

# Key-value store
gem 'redis'

# Easier networking
gem 'httparty', require: false

# XML Parsing
gem 'nokogiri', require: false
gem 'nori', require: false

# Truncate HTML for blog post
gem 'truncate_html'

# Use the right host
gem 'rack-canonical-host'

# ACME challenge response
gem 'acme_challenge'

# Always use SSL
gem 'rack-ssl'

# Stylesheet
gem 'bourbon'
gem 'sass'
gem 'sprockets-sass'

# JavaScript
gem 'coffee-script'
gem 'uglifier'

group :development do
  # Automatic reloading
  gem 'shotgun'
end
